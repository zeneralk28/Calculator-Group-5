<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/img"
    android:padding="20dp">


    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nums"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:background="#80FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
       android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/num7"
                style="@style/Button2"
                android:paddingTop="40dp"
                android:text="7" />

            <Button
                android:id="@+id/num4"
                style="@style/Button2"
                android:text="4" />

            <Button
                android:id="@+id/num1"
                style="@style/Button2"
                android:text="1" />

            <Button
                android:id="@+id/del"
                style="@style/Button1"
                android:text="del" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/num8"
                style="@style/Button2"
                android:text="8" />

            <Button
                android:id="@+id/num5"
                style="@style/Button2"
                android:text="5" />

            <Button
                android:id="@+id/num2"
                style="@style/Button2"
                android:text="2" />

            <Button
                android:id="@+id/num0"
                style="@style/Button2"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num9"
                android:text="9"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num6"
                android:text="6"
                style="@style/Button2"/>

            <Button
                android:id="@+id/num3"
                android:text="3"
                style="@style/Button2"/>

            <Button
                android:id="@+id/point"
                android:text="."
                style="@style/Button2"/>

            <Button
                android:id="@+id/ac"
                android:text="AC"
                style="@style/Button1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/div"
                android:text="/"
                style="@style/Button1"/>

            <Button
                android:id="@+id/times"
                android:text="X"
                style="@style/Button1"/>

            <Button
                android:id="@+id/min"
                android:text="-"
                style="@style/Button1"/>

            <Button
                android:id="@+id/plus"
                android:text="+"
                style="@style/Button1"/>

            <Button
                android:id="@+id/equal"
                android:text="="
                style="@style/Button1"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>